{
    "name": "braccobreadco.com",
    "version": "1.0.0",
    "description": "The source code for the braccobreadco.com website.",
    "scripts": {
        "build": "npx @11ty/eleventy",
        "clean": "rimraf _site",
        "start": "npx @11ty/eleventy --serve --quiet",
        "debug": "DEBUG=Eleventy* npx @11ty/eleventy",
        "debugstart": "DEBUG=Eleventy* npx @11ty/eleventy --serve --quiet",
        "benchmark": "DEBUG=Eleventy:Benchmark* npx @11ty/eleventy",
        "prepare": "husky install",
        "lint:content": "npx prettier --check .",
        "lint:styles": "npx stylelint **/*.css",
        "lint:scripts": "npx eslint --ext **/*.js",
        "lint": "run-s lint:*",
        "format:content": "npx prettier --write .",
        "format:styles": "npx stylelint **/*.css --fix",
        "format:scripts": "npx eslint --ext **/*.js --fix",
        "format": "run-s format:*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cbracco/braccobreadco.com.git"
    },
    "author": {
        "name": "Chris Bracco",
        "email": "chris@bracco.family",
        "url": "https://chrisbracco.com/"
    },
    "license": "MIT",
    "engines": {
        "node": ">=14"
    },
    "bugs": {
        "url": "https://github.com/cbracco/braccobreadco.com/issues"
    },
    "homepage": "https://github.com/cbracco/braccobreadco.com#readme",
    "devDependencies": {
        "@11ty/eleventy": "^2.0.1",
        "@11ty/eleventy-img": "^3.1.1",
        "@11ty/eleventy-navigation": "^0.3.5",
        "@11ty/eleventy-plugin-bundle": "^1.0.4",
        "@11ty/eleventy-plugin-rss": "^1.2.0",
        "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
        "autoprefixer": "^10.4.16",
        "cssnano": "^6.0.2",
        "husky": "^8.0.0",
        "lint-staged": "^15.1.0",
        "luxon": "^3.3.0",
        "markdown-it-anchor": "^8.6.7",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.32",
        "prettier": "^3.1.0",
        "prettier-plugin-twig-nunjucks-melody": "^0.1.0",
        "rimraf": "^5.0.5",
        "stylelint": "^15.11.0",
        "stylelint-config-standard": "^34.0.0",
        "tailwindcss": "^3.3.5"
    },
    "dependencies": {
        "@11ty/eleventy-fetch": "^4.0.0"
    }
}
