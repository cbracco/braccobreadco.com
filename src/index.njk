        <a
            href="{{ metadata.social.instagram }}"
            title="Follow @braccobreadco on Instagram"
            target="_blank"
            rel="noreferrer"
            >{% image "static/img/instagram.svg", "Bracco Bread Co. on Instagram" %}</a
        >
    </div>
</section>
<div class="divider">
    {% image "static/img/bread-1.webp", null, [1, "auto"], "(max-width: 767px) 1px, 100vw" %} {% image
